*****LINEAR SEARCH ******

#include <stdio.h>

int main()
{
  int  n ;
  printf("how many elements do you want to enter  :") ;
  scanf("%d",&n) ;
  int a[n] ;
  printf("***Enter elements***");
  for (int i=0 ;i<n ;i++)
  {
      scanf("%d",&a[i]) ;
  }
  int ele ;
  int found=0 ;
  printf("Enter element to search :") ;
  scanf("%d",&ele) ;
  
  for ( int i=0 ;i<n ;i++)
  {
      if(a[i]==ele)
      {
          found =1 ;
          printf("Element found") ;
          break ;
      }
      
  }
if(found==0)
{
    printf("Sorry! element not found") ;
    
}
    return 0;
}
